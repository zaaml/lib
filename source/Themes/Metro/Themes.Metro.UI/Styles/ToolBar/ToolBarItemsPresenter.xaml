<zm:ThemeResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:zm="http://schemas.zaaml.com/xaml"
                            xmlns:zmb="http://schemas.zaaml.com/build"
                            mc:Ignorable="zmb">

  <!--  Template  -->
  <ControlTemplate x:Key="ToolBarItemsPresenterTemplate"
                   TargetType="zm:ToolBarItemsPresenter">
    <zm:ItemsPresenterTemplateRoot>
      <zm:ToolBarItemsPanel x:Name="ItemsHost" />
    </zm:ItemsPresenterTemplateRoot>
  </ControlTemplate>

  <!--  Base Style  -->
  <zm:Style x:Key="ToolBarItemsPresenterBaseStyle" TargetType="zm:ToolBarItemsPresenter">
    <zm:Setter Property="Template" Value="{StaticResource ToolBarItemsPresenterTemplate}" />
  </zm:Style>

  <!--  Style  -->
  <zm:Style x:Key="ToolBarItemsPresenterStyle" BasedOn="{StaticResource ToolBarItemsPresenterBaseStyle}" TargetType="zm:ToolBarItemsPresenter" />

  <!--  Theme Style  -->
  <zm:ThemeStyle x:Key="ToolBarItemsPresenterThemeStyle" zmb:Deferred="True" BasedOn="{StaticResource ToolBarItemsPresenterStyle}" TargetType="zm:ToolBarItemsPresenter" />

</zm:ThemeResourceDictionary>