<zm:ThemeResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:zm="http://schemas.zaaml.com/xaml"
                            xmlns:zmb="http://schemas.zaaml.com/build"
                            mc:Ignorable="d zmb">

  <zm:ThemeResourceDictionary.MergedDictionaries>
    <zm:ThemeResourceDictionary Source="WindowBase.xaml" />
  </zm:ThemeResourceDictionary.MergedDictionaries>

  <!--  WindowHeaderPresenterStyle  -->
  <zm:Style x:Key="AppWindowHeaderPresenterStyle" BasedOn="{StaticResource WindowHeaderPresenterStyle}" Skin="Metro.AppWindow.Header" TargetType="zm:WindowHeaderPresenter" />

  <!--  Style  -->
  <zm:Style x:Key="AppWindowStyle" zmb:Deferred="True" BasedOn="{StaticResource WindowStyle}" Skin="Metro.AppWindow" TargetType="zm:AppWindow">

    <zm:Setter Property="HeaderPresenterStyle" Value="{StaticResource AppWindowHeaderPresenterStyle}" />

  </zm:Style>

  <!--  Theme Styles  -->
  <zm:ThemeStyle x:Key="AppWindowThemeStyle" zmb:Deferred="True" BasedOn="{StaticResource AppWindowStyle}" TargetType="zm:AppWindow" />

</zm:ThemeResourceDictionary>
