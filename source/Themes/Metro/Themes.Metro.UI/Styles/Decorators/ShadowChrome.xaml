<zm:ThemeResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                            xmlns:zm="http://schemas.zaaml.com/xaml" 
                            xmlns:zmb="http://schemas.zaaml.com/build" 
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                            mc:Ignorable="zmb">

  <!-- Base Style -->
  <zm:Style x:Key="ShadowChromeBaseStyle" TargetType="zm:ShadowChrome">
    <zm:Setter Property="BlurRadius" Value="12" />
    <zm:Setter Property="ShadowDirection" Value="0" />
    <zm:Setter Property="ShadowOpacity" Value="0.4" />
  </zm:Style>

  <!-- Style -->
  <zm:Style x:Key="ShadowChromeStyle" TargetType="zm:ShadowChrome" BasedOn="{StaticResource ShadowChromeBaseStyle}" />

  <!-- Theme Style -->
  <zm:ThemeStyle x:Key="ShadowChromeThemeStyle" TargetType="zm:ShadowChrome" BasedOn="{StaticResource ShadowChromeStyle}" zmb:Deferred="True" />

</zm:ThemeResourceDictionary>