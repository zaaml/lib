<zm:ThemeResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                            xmlns:zm="http://schemas.zaaml.com/xaml" 
                            xmlns:zmb="http://schemas.zaaml.com/build" 
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                            mc:Ignorable="zmb">

  <!-- Base Style -->
  <zm:Style x:Key="PopupShadowChromeBaseStyle" TargetType="zm:PopupShadowChrome">
    <zm:Setter Property="ShadowSize" Value="24" />
    <zm:Setter Property="ShadowOpacity" Value="0.3" />
  </zm:Style>

  <!-- Style -->
  <zm:Style x:Key="PopupShadowChromeStyle" TargetType="zm:PopupShadowChrome" BasedOn="{StaticResource PopupShadowChromeBaseStyle}" />

  <!-- Theme Style -->
  <zm:ThemeStyle x:Key="PopupShadowChromeThemeStyle" TargetType="zm:PopupShadowChrome" BasedOn="{StaticResource PopupShadowChromeStyle}" zmb:Deferred="True" />

</zm:ThemeResourceDictionary>