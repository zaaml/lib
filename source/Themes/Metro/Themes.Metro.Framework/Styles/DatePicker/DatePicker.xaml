                Background="{zm:ThemeResource Key=Metro.StandardControls.DatePicker.Button.Background.Normal}" 
                BorderBrush="{zm:ThemeResource Key=Metro.StandardControls.DatePicker.Button.BorderBrush.Normal}" 
                BorderThickness="{TemplateBinding BorderThickness}">
          <zm:Extension.Setters>
            <zm:SetterGroup Property="Background">
              <zm:Setter VisualState="MouseOver" Value="{zm:ThemeResource Key=Metro.StandardControls.DatePicker.Button.Background.MouseOver}" />
              <zm:Setter VisualState="Pressed" Value="{zm:ThemeResource Key=Metro.StandardControls.DatePicker.Button.Background.Pressed}" />
