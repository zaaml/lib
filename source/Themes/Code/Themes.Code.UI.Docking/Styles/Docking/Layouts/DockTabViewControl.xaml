<zm:ThemeResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:zm="http://schemas.zaaml.com/xaml" 
                            xmlns:zmb="http://schemas.zaaml.com/build"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            mc:Ignorable="zmb">

  <!-- Base Style -->
  <zm:Style x:Key="DockTabViewControlBaseStyle" TargetType="zm:DockTabViewControl" BasedOn="{zm:ThemeStyle TargetType=zm:TabViewControl}">
    <zm:Setter Property="BorderThickness" Value="0" />
  </zm:Style>

  <!-- Style -->
  <zm:Style x:Key="DockTabViewControlStyle" TargetType="zm:DockTabViewControl" BasedOn="{StaticResource DockTabViewControlBaseStyle}" />

    <!-- Theme Style -->
  <zm:ThemeStyle x:Key="DockTabViewControlThemeStyle" TargetType="zm:DockTabViewControl" BasedOn="{StaticResource DockTabViewControlStyle}" zmb:Deferred="True" />

</zm:ThemeResourceDictionary>